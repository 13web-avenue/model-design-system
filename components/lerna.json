{
  "version": "0.1.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file"
      ],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "publishConfig": {
    "registry": "https://tfs.amaris.com/tfs/FrontEnd/UI%20Components/_git/unify-components"
  },
  "packages": [
    "*/**"
  ]
}
